<Window x:Class="GamePlanet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePlanet"
        mc:Ignorable="d"
        Title="GamePlanet" Height="700" Width="450" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown">


    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Grid.Background>
            <ImageBrush ImageSource="Media/logintest.png" Stretch="UniformToFill" Opacity="0.995"/>
        </Grid.Background>
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="340" Margin="101,220,0,0" VerticalAlignment="Top" Width="303">
            <TextBox x:Name ="txtUsername" HorizontalAlignment="Left" Height="28" Margin="41,50,0,0" TextWrapping="Wrap" Text="TextBox" Width="228"/>
            <TextBox x:Name ="txtPassword" HorizontalAlignment="Left" Height="28" Margin="41,50,0,0" TextWrapping="Wrap" Text="TextBox" Width="228"/>


        </StackPanel>
    </Grid>
</Window>
